{
    "name": "sub_reaction",
    "description": "外部刺激へのリアクションを実行する",
    "input_schema": [
        {
            "name": "trigger",
            "description": "リアクションのトリガー情報",
            "source": "parent.reaction_trigger"
        }
    ],
    "context_requirements": {
        "history_depth": "full",
        "inventory": true,
        "building_items": true,
        "system_prompt": true
    },
    "router_callable": false,
    "user_selectable": false,
    "nodes": [
        {
            "id": "react",
            "type": "llm",
            "action": "外部からの刺激にリアクションしてください。\n\nトリガー情報:\n{trigger}\n\n適切なリアクション（発言、行動、思考など）を決定してください。",
            "response_schema": {
                "type": "object",
                "properties": {
                    "reaction_type": {
                        "type": "string",
                        "enum": [
                            "speak",
                            "action",
                            "think"
                        ],
                        "description": "リアクションの種類"
                    },
                    "content": {
                        "type": "string",
                        "description": "リアクションの内容"
                    },
                    "reasoning": {
                        "type": "string",
                        "description": "このリアクションを選んだ理由"
                    }
                },
                "required": [
                    "reaction_type",
                    "content"
                ]
            },
            "output_key": "reaction_result",
            "next": null
        }
    ],
    "start_node": "react"
}