{
  "name": "meta_user",
  "description": "Router -> subgraph -> speak for user queries",
  "input_schema": [
    { "name": "query", "description": "User input" }
  ],
  "context_requirements": {
    "history_depth": "full",
    "inventory": true,
    "building_items": true,
    "system_prompt": true
  },
  "router_callable": false,
  "nodes": [
    { "id": "router", "type": "llm", "action": "Select a playbook name or 'basic_chat'. Input: {query}", "next": "exec" },
    { "id": "exec", "type": "llm", "action": "Act as selected playbook and produce final answer for: {query}", "next": "speak" },
    { "id": "speak", "type": "speak", "action": "{last}", "next": null }
  ],
  "start_node": "router"
}
