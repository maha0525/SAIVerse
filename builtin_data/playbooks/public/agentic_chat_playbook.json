{
    "name": "agentic_chat",
    "display_name": "ツール自由使用",
    "description": "ツールを自由に使って情報を集め、回答するエージェント型チャット",
    "input_schema": [
        {
            "name": "input",
            "description": "ユーザーの要求"
        }
    ],
    "router_callable": false,
    "user_selectable": true,
    "dev_only": true,
    "nodes": [
        {
            "id": "init",
            "type": "set",
            "assignments": {
                "loop_count": 0,
                "max_loops": 30,
                "tool_history": "",
                "response_text": ""
            },
            "next": "agent_think"
        },
        {
            "id": "agent_think",
            "type": "llm",
            "context_profile": "conversation",
            "speak": true,
            "memorize": {
                "tags": [
                    "conversation"
                ]
            },
            "available_tools": [
                "memory_search_brief",
                "searxng_search",
                "read_url_content",
                "memopedia_search",
                "chronicle_search",
                "chronicle_read_detail",
                "document_create",
                "document_read",
                "document_search",
                "calculator",
                "image_generator",
                "item_pickup",
                "item_place",
                "item_view",
                "memory_recall",
                "schedule_add",
                "send_email_to_user"
            ],
            "action": "",
            "output_keys": [
                {
                    "text": "response_text"
                },
                {
                    "function_call": "fc"
                }
            ],
            "next": "check_tool_call"
        },
        {
            "id": "check_tool_call",
            "type": "pass",
            "conditional_next": {
                "field": "tool_called",
                "operator": "eq",
                "cases": {
                    "True": "exec_tool",
                    "default": null
                }
            }
        },
        {
            "id": "exec_tool",
            "type": "tool_call",
            "call_source": "fc",
            "output_key": "tool_result",
            "next": "accumulate"
        },
        {
            "id": "accumulate",
            "type": "set",
            "assignments": {
                "tool_history": "{tool_history}\n\n### {fc.name}\n結果: {tool_result}",
                "loop_count": "={loop_count} + 1"
            },
            "next": "check_loop_limit"
        },
        {
            "id": "check_loop_limit",
            "type": "pass",
            "conditional_next": {
                "field": "loop_count",
                "operator": "gte",
                "cases": {
                    "5": "force_respond",
                    "default": "agent_think"
                }
            }
        },
        {
            "id": "force_respond",
            "type": "llm",
            "context_profile": "conversation",
            "speak": true,
            "memorize": {
                "tags": [
                    "conversation"
                ]
            },
            "action": "ツール呼び出しの上限に達しました。これまでに収集した情報を基に回答を生成してください。\n\n収集情報:\n{tool_history}",
            "output_key": "response_text",
            "next": null
        }
    ],
    "start_node": "init"
}