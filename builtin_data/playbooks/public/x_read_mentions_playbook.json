{
    "name": "x_read_mentions",
    "display_name": "Xメンション確認",
    "description": "X（Twitter）のメンション（自分宛てのツイート）を取得し、記憶に保存する。",
    "input_schema": [
        {
            "name": "input",
            "description": "メンションを確認する理由"
        }
    ],
    "router_callable": true,
    "required_credentials": ["x"],
    "nodes": [
        {
            "id": "fetch",
            "type": "tool",
            "action": "x_read_mentions",
            "args_input": {
                "max_results": 10
            },
            "next": "record"
        },
        {
            "id": "record",
            "type": "memorize",
            "action": "Xメンション取得結果:\n{last}",
            "role": "user",
            "tags": ["conversation", "x_mentions", "playbook_result"],
            "next": null
        }
    ],
    "start_node": "fetch"
}
